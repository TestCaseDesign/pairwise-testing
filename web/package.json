{
  "name": "pairwise-testing",
  "version": "0.1.0",
  "description": "Web frontend for Microsoft PICT tool for pairwise testing",
  "repository": {
    "type": "git",
    "url": "https://github.com/rasmusselsmark/pairwise-testing"
  },
  "main": "index.js",
  "scripts": {
    "build-css": "stylus source/stylesheets/index.styl -o static/css",
    "watch-css": "stylus source/stylesheets/index.styl -o static/css -w",
    "clean": "rm -rf static/css && mkdir -p static/css",
    "build": "npm run clean && npm run build-css",
    "watch": "npm run clean && npm run watch-css & nodemon server -e js,pug",
    "start": "node server"
  },
  "author": "Rasmus Selsmark",
  "license": "ISC",
  "readme": "README.md",
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "morgan": "^1.7.0",
    "nodemon": "^1.9.2",
    "pug": "^2.0.0-beta6",
    "stylus": "^0.54.5"
  }
}
